<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5F6FA9"
    tools:context=".LoginSignupActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="346dp"
        android:layout_height="248dp"
        android:rotation="-15"
        app:srcCompat="@drawable/chatgpt_image_21__juni_2025__23_06_31"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="49dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/pngwing_com__7_"
        tools:layout_editor_absoluteX="312dp"
        tools:layout_editor_absoluteY="40dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/pngwing_com__9_"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="264dp" />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="214dp"
        android:layout_height="65dp"
        android:backgroundTint="#083362"
        android:text="Log-in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="405dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="214dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@id/loginbtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/loginbtn"
        app:layout_constraintTop_toBottomOf="@id/loginbtn" />

    <Button
        android:id="@+id/signinbtn"
        android:layout_width="214dp"
        android:layout_height="65dp"
        android:backgroundTint="#083362"
        android:text="Sign-in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="516dp" />

</androidx.constraintlayout.widget.ConstraintLayout>