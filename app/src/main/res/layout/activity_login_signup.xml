<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5F6FA9"
    tools:context=".LoginSignupActivity">

    <!-- Dein Logo -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="346dp"
        android:layout_height="248dp"
        android:rotation="-15"
        app:srcCompat="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <!-- Stern oben rechts -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/pngwing_com__7_"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp" />

    <!-- Stern unten links neben Logo -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/pngwing_com__9_"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="-40dp"
        android:layout_marginStart="32dp" />

    <!-- Einloggen Button -->
    <Button
        android:id="@+id/loginbtn"
        android:layout_width="214dp"
        android:layout_height="65dp"
        android:backgroundTint="#083362"
        android:text="Einloggen"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp" />

    <!-- Divider Linie -->
    <View
        android:id="@+id/divider"
        android:layout_width="214dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/loginbtn"
        app:layout_constraintStart_toStartOf="@id/loginbtn"
        app:layout_constraintEnd_toEndOf="@id/loginbtn"
        android:layout_marginTop="20dp" />

    <!-- Registrieren Button -->
    <Button
        android:id="@+id/signinbtn"
        android:layout_width="214dp"
        android:layout_height="65dp"
        android:backgroundTint="#083362"
        android:text="Registrieren"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
